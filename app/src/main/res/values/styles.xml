<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#689f38</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">#1e1e1e</item>
        <item name="android:background">#b2ff59</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="Kebiao">
        <item name="android:background">@drawable/biankuan2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>


        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="Kebiao2" parent="Kebiao">

        <item name="android:background">@drawable/biankuan3</item>
    </style>



</resources>
