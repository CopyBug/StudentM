<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/school02"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎你："
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/myname"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="梁浩文"
        android:textSize="25dp"
        android:textColor="#f2eeee"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号："/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/Stuid"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1711605009"
            android:textSize="25dp"
            android:textColor="#fffafa"/>

    </LinearLayout>
    <RelativeLayout

        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView_home"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/myschool" />

    </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <Button
          android:id="@+id/Mhome"
          style="@style/ButtonText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Home"/>
      <Button
          android:id="@+id/Mselected"
          style="@style/ButtonText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Prime"/>
      <Button
          android:id="@+id/MEven"
          style="@style/ButtonText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/EvenRg"/>
      <Button
          android:id="@+id/MED"
          style="@style/ButtonText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Rgdetail"/>
      <Button
          android:id="@+id/GetOut"
          style="@style/ButtonText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Out"/>
  </LinearLayout>



</LinearLayout>
